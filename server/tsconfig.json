{
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "build",
        "strict": true,
        "lib": ["esnext"],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "esnext",
        "moduleResolution": "Node",
        "module": "CommonJS",
        "typeRoots": ["./types"],
        "strictPropertyInitialization": false
    },
    "ts-node": {
        "transpileOnly": true
    }
}
